<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:id="@+id/dish_name" 
    android:text=""
    android:layout_gravity="center_vertical"
    android:gravity="center_horizontal"
    />
  <ImageView android:scaleType="center"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:id="@+id/dish_pic">
  </ImageView>
  <TextView  
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:id="@+id/dish_comment_count" 
    android:text=""
    />

<RelativeLayout
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
<LinearLayout
  android:orientation="vertical"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
<LinearLayout
  android:orientation="horizontal"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
    <TextView  
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:id="@+id/dish_first_comment_user" 
    android:text=""
    />
    <TextView  
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:id="@+id/dish_first_comment_context" 
    android:text=""
    />
</LinearLayout>

<LinearLayout
  android:orientation="horizontal"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
    <TextView  
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:id="@+id/dish_second_comment_user" 
    android:text=""
    />
    <TextView  
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:id="@+id/dish_second_comment_context" 
    android:text=""
    />
</LinearLayout>
</LinearLayout>

<LinearLayout
  android:orientation="horizontal"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_alignParentRight="true">
  <ImageView android:scaleType="center"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/dish_more_comment"
      android:src="@drawable/btn_browser">
  </ImageView>
</LinearLayout>
</RelativeLayout>
    
    
  
</LinearLayout>
